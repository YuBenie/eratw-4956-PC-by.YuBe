;==================================================
;ARG为1，玩家在有多少个恋人，针对多恋人补丁
;ARG为2，玩家在地灵殿之外有多少个恋人，针对多恋人补丁
;返回-1，代表函数未正确启动
;-------------------------------------------------
@K36_MASTER_LOVER_NUMBER(ARG)
#FUNCTION
#DIM NUMBER = 0
;声明变量NUMBER并赋值0
#DIM NUM = 1
;声明变量NUM并赋值1
NUMBER = 0

IF ARG == 1
	FOR NUM, 1, CHARANUM
		IF TALENT:NUM:恋人
			NUMBER ++
		ENDIF
	NEXT
ELSEIF ARG == 2
	FOR NUM, 1, CHARANUM
		IF TALENT:NUM:恋人 && !(NUM == 36 || NUM == 37 || NUM == 38 || NUM == 49)
		;除了地灵殿众人以外的恋人
			NUMBER ++
		ENDIF
	NEXT
ELSE
	NUMBER = -1
ENDIF

RETURNF NUMBER